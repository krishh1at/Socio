<h4 class="small"><%= current_user.full_name %>:</h4>

<%= form_for [@post, @comment], class: "edit", remote: true do |f| %>
  <%= render "shared/errors", resource: @comment %>
  <div class="form-group">
    <%= f.text_area :body, placeholder: "Write...", class: "form-control" %>
  </div
  <div class="form-group">
    <%= f.submit "Update", disabled_with: "Updating..." , title: yield(:button_label), class: "btn btn-primary float-right" %>
    <%= link_to "Close", "#", id: "close", class: "btn btn-primary" %>
  </div>
<% end %>
