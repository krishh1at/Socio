<%= form_for @post, remote: true do |f| %>
  <%= render "shared/errors", resource: @post %>

  <div class="form-group my-2">
    <%= f.text_field :title, placeholder: "Title...", required: true, class: "form-control" %>
  </div

  <div class="form-group my-2">
    <%= f.text_area :body, placeholder: "Write...", row: 30, required: true, class: "form-control box" %>
  </div
  <div class="form-group mt-3">
    <%= f.submit "Add", class: "btn btn-primary float-right" %>
    <%= link_to "Close", "#", class: "close btn btn-primary" %>
  </div>
<% end %>
